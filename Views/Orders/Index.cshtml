@model IEnumerable<apidappermvcproje.Models.Order>
@{
    ViewData["Title"] = "Siparişler";
}
<h1>Siparişler</h1>
<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Yeni Sipariş Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Müşteri</th>
            <th>Ürün</th>
            <th>Adet</th>
            <th>Toplam Fiyat</th>
            <th>Tarih</th>
            <th>Durum</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Customer?.FirstName @item.Customer?.LastName</td>
            <td>@item.Product?.Name</td>
            <td>@item.Quantity</td>
            <td>@item.TotalPrice</td>
            <td>@item.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
            <td>@item.Status</td>
            <td>
                <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", new { id = item.Id })">Düzenle</a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = item.Id })">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table> 