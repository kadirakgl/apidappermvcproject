@model IEnumerable<apidappermvcproje.Models.Customer>
@{
    ViewData["Title"] = "Müşteriler";
}
<h1>Müşteriler</h1>
<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Yeni Müşteri Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Adres</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>@item.Address</td>
            <td>
                <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", new { id = item.Id })">Düzenle</a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = item.Id })">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table> 